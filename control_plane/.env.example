# 环境变量示例
# 复制此文件为 .env 并填写实际值

# 应用配置
APP_NAME="QYH Jushen Control Plane"
APP_VERSION="2.0.0"
DEBUG=false

# 服务地址
HOST=0.0.0.0
PORT=8000

# 数据库（SQLite）
DATABASE_URL=sqlite:///~/qyh-robot-system/persistent/web/web.db

# JWT 认证（必须修改为安全的随机字符串）
# 支持 SECRET_KEY 或 JWT_SECRET
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
TOKEN_REFRESH_THRESHOLD_MINUTES=10

# 其他服务地址
WEBSOCKET_SERVER_URL=ws://127.0.0.1:8765
WEBRTC_SIGNALING_URL=http://127.0.0.1:8888

# ROS2 配置
ROS_DOMAIN_ID=0

# CORS
CORS_ORIGINS=*

# 日志
LOG_LEVEL=INFO

# 默认管理员
AUTO_CREATE_ADMIN=true
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-me

# 代理与内部接口
TRUST_PROXY=false
VR_INTERNAL_TOKEN=
