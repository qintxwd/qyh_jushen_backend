# 应用配置
APP_NAME=QYH Jushen Web
APP_VERSION=1.0.0
DEBUG=true

# 数据库
DATABASE_URL=sqlite:///~/qyh-robot-system/persistent/web/web.db

# JWT 密钥（生产环境必须随机生成）
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
# Token 自动刷新阈值（剩余时间少于此值时自动刷新，单位：分钟）
TOKEN_REFRESH_THRESHOLD_MINUTES=10

# ROS2 配置
ROS_DOMAIN_ID=42
MOCK_MODE=false

# CORS 允许的源
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 日志级别
LOG_LEVEL=INFO
